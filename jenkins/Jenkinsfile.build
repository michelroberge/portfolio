// Jenkinsfile.build (build only)
pipeline {
    agent any
    tools { nodejs "node" } 

    stages {
        stage('Install Dependencies') { 
            steps {
                sh 'npm install'
            }
        }
        stage('Build Application') { 
            steps {
                dir('portfolio.next') {
                    sh 'npm run build'
                }
            }
        }
    }
}
